{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "declaration": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "jsx": "react",
    "downlevelIteration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2016",
      "es2017.object",
      "dom"
    ],
    "baseUrl": "./",
    "outDir": "./build"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}